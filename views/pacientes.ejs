<%- include('layout') -%>
<br><br><br>
<div class="container">
  <h2><%= title %></h2>
  <table class="table table-striped table-hover table-responsive">
    <thead>
      <tr>
        <th>CPF</th>
        <th>Nome Completo</th>
        <th>Idade</th>
        <th>Dia Marcado</th>
        <th>Hora Marcada</th>
      </tr>
    </thead>
    <tbody>
      <% if (pacientes.length > 0) { %>
        <% pacientes.forEach(paciente => { %>
          <tr>
            <td><%= paciente.cpf %></td>
            <td><%= paciente.nome %></td>
            <td><%= paciente.idade %></td>
            <td><%= paciente.diaMarcado%></td>
            <td><%= paciente.horaMarcada %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="5">Nenhum registro encontrado</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
